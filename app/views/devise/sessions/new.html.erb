<%= form_with scope: resource, as: resource_name, url: session_path(resource_name), class: "mx-auto space-y-6 w-1/2 max-w-sm", local: true do |f| %>
  <label class="block text-xl font-bold text-white">ログイン</label>
  <div class="mt-1">
    <label class="text-white text-md">
      メールアドレス
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-black bg-gray-700 mt-1 block w-full sm:text-sm border rounded-md"%>
  </div>
  <div class="mt-1">
    <label class="text-white text-md">
      パスワード
    </label>
    <%= f.password_field :password, autocomplete: "password", class: "border-black bg-gray-700 mt-1 block w-full sm:text-sm border rounded-md"%>
  </div>

  <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
    <%= f.submit "ログイン" %>
  </button>
<% end %>