<%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "mx-auto space-y-6 w-3/4 max-w-lg" ,local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <label class="block text-xl  text-white">ユーザー登録</label>
  <div class="mt-1">
    <label class="text-white text-md">
      メールアドレス
    </label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-700 mt-1 block w-full sm:text-sm border border-black rounded-md", placeholder: "test@exeample.com" %>
  </div>
  <div class="mt-1">
    <label class="text-white text-md">
      パスワード (6文字以上)
    </label>
    <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-700 mt-1 block w-full border border-black rounded-md", placeholder: "pass1234" %>
  </div>
  <div class="mt-1">
    <label class="text-white text-md">
      確認用パスワード
    </label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-700 mt-1 block w-full border border-black rounded-md", placeholder: "pass1234" %>
  </div>

  <button type="submit" class="bg-blue-500 w-full flex justify-center py-2 px-4 border text-sm font-medium rounded-md text-white">
    <%= f.submit "ユーザー登録" %>
  </button>
<% end %>
